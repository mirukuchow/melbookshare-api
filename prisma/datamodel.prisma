type Copy {
  id: ID! @id
  sourceId: ID,
  ownerId: ID,
  price: String!
  condition: String!
  comment: String
  contact: String!
  location: String
  book: Book @relation(name: "CopyToBook")
  owner: User @relation(name: "CopyToOwner")
}

type Book {
  id: ID! @id
  title: String!
  sourceId: ID!
  image: String
  author: String
  rating: Float
  availableBooks: [Copy] @relation(name: "CopyToBook", onDelete: CASCADE)
}

type User {
  id: ID! @id
  userId: ID!
  alias: String!
  avatar: String
  ownedBooks: [Copy] @relation(name: "CopyToOwner", onDelete: CASCADE)
}
