type Copy {
  id: ID! @id
  sourceId: ID!
  ownerId: ID!
  price: String!
  condition: String!
  comment: String
  contact: String!
  location: String
  book: Book
  owner: Owner
}

type Book {
  id: ID! @id
  image: String
  author: String
  rating: String
  availableBooks: [Copy]!
}

type Owner {
  id: ID! @id
  alias: String!
  avatar: String
  ownedBooks: [Copy]!
}
