type Copy {
  id: ID! @id
  sourceId: ID,
  ownerId: ID,
  price: String!
  condition: String!
  comment: String
  contact: String!
  location: String
  book: Book
  owner: User
}

type Book {
  id: ID! @id
  sourceId: ID!
  image: String
  author: String
  rating: Float
  availableBooks: [Copy]
}

type User {
  id: ID! @id
  userId: ID!
  alias: String!
  avatar: String
  ownedBooks: [Copy]
}
